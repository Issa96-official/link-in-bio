{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "cd \"${workspaceFolder}\"; npm install",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start Development Server",
      "type": "shell",
      "command": "cd \"${workspaceFolder}\"; npm run dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Build for Production",
      "type": "shell",
      "command": "cd \"${workspaceFolder}\"; npm run build",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start Backend Server",
      "type": "shell",
      "command": "cd \"${workspaceFolder}\"; npm run server",
      "group": "build",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Start Full Development Environment",
      "type": "shell",
      "command": "cd \"${workspaceFolder}\"; npm run dev:full",
      "group": "build",
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
